<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.moviesearchapp_mvvm.ui.movies.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.moviesearchapp_mvvm.ui.poster.DetailsFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="movieId"
            app:argType="string" />
        <argument
            android:name="posterUrl"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsFragment_to_moviesCastFragmentFragment"
            app:destination="@id/moviesCastFragment" />
    </fragment>


    <fragment
        android:id="@+id/moviesCastFragment"
        android:name="com.example.moviesearchapp_mvvm.ui.cast.MoviesCastFragment"
        android:label="Movie Cast"
        tools:layout="@layout/fragment_movies_cast">
        <argument
            android:name="movie_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/namesFragment"
        android:name="com.example.moviesearchapp_mvvm.ui.names.NamesFragment"
        android:label="Names"
        tools:layout="@layout/fragment_names" />

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.moviesearchapp_mvvm.ui.names.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>